<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   
   	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	   
	   
	   
	   	<Button
			android:layout_weight="1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:text="Timeline"
		    android:id="@+id/button_timeline_data_provider"/>
	   
	   	<Button
			android:layout_weight="1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:text="Multi-series (temperature data)"
		    android:id="@+id/button_multiseries_data_provider"/>
		    
		<Button
			android:layout_weight="1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:text="Labeled Multi-series (budget data)"
		    android:id="@+id/button_labeled_multiseries_data_provider"/>
    </LinearLayout>
    
	<TextView
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textStyle="bold"
		android:textColor="@color/white"
		android:layout_margin="5dip"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:text="Welcome!"
	/>

	<TextView
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textStyle="bold"
		android:layout_margin="5dip"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:text="Select a chart style.  Try viewing each chart in portrait and landscape mode."
	/>
	


	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >

		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="1">
		    >
		    
		  	<TextView
			     android:text="Via Intent Extras"  
			     android:layout_width="fill_parent"  
			     android:layout_height="wrap_content"  
			     android:paddingTop="2dip"  
			     android:paddingBottom="2dip"  
			     android:paddingLeft="5dip"  
			     style="?android:attr/listSeparatorTextViewStyle" />
			
			<LinearLayout
			    android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    >
				<Button
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    android:drawableTop="@drawable/pie_button"
				    android:text="Pie Chart"
				    android:id="@+id/button_pie_chart"/>
				    
				<Button
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    android:drawableTop="@drawable/calendar_button"
				    android:text="Calendar"
				    android:id="@+id/button_calendar"/>
			</LinearLayout>
			
		</LinearLayout>
		
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="1">
		    >

			<TextView
			     android:text="Via Content Providers"  
			     android:layout_width="fill_parent"  
			     android:layout_height="wrap_content"  
			     android:paddingTop="2dip"  
			     android:paddingBottom="2dip"  
			     android:paddingLeft="5dip"  
			     style="?android:attr/listSeparatorTextViewStyle" />
			     
			<LinearLayout
			    android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    >
				<Button
				    android:layout_width="wrap_content"
				    android:drawableTop="@drawable/pie_button"
				    android:layout_height="wrap_content" 
				    android:text="Pie Chart"
				    android:id="@+id/button_pie_chart_provider"/>
				    
				<Button
				    android:layout_width="wrap_content"
				    android:drawableTop="@drawable/calendar_button"
				    android:layout_height="wrap_content" 
				    android:text="Calendar"
				    android:id="@+id/button_calendar_provider"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	

	<TextView
		android:linksClickable="true"
		android:id="@+id/developer_note"
		android:layout_margin="5dip"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:text="@string/developer_note"
	/>
</LinearLayout>
