<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.googlecode.chartdroid"
      android:versionCode="5" android:versionName="1.3">
    <application android:icon="@drawable/chartdroid_icon" android:label="@string/app_name">

        <!-- The following are DEMO providers that you should place in your own apps. -->
      	<provider android:label="Some random data"
   			android:name=".demo.provider.DataContentProvider"
	        android:authorities="com.googlecode.chartdroid.demo.provider.data"
		/>
        
      	<provider android:label="Some random event"
   			android:name=".demo.provider.EventContentProvider"
	        android:authorities="com.googlecode.chartdroid.demo.provider.events"
		/>





        <activity android:name=".demo.Demo"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".pie.ChartPanelActivity" android:theme="@android:style/Theme.Translucent">
            <intent-filter>
		    	<action android:name="com.googlecode.chartdroid.intent.action.PLOT" />
		    	<category android:name="android.intent.category.DEFAULT" />
		    	<category android:name="com.googlecode.chartdroid.intent.category.PIE_CHART" />
		    </intent-filter>
		    
            <intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<data android:mimeType="vnd.android.cursor.dir/vnd.com.googlecode.chartdroid.data"/>
		    </intent-filter>
	    </activity>

        <activity android:name=".calendar.Calendar">
	        <intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<action android:name="android.intent.action.PICK"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<data android:mimeType="vnd.android.cursor.dir/vnd.com.googlecode.chartdroid.event"/>
			</intent-filter>
	    </activity>
        
		<activity android:name=".calendar.EventListActivity" android:theme="@android:style/Theme.Translucent"/>

        
    </application>
    <uses-sdk android:minSdkVersion="3" />
</manifest> 